<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Signup in Heavenly</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input name="username" id="username" type="text" class="form-control border-2" required>
                <div class="valid-feedback">
                    Username looks good!
                </div>
                <div class="invalid-feedback">
                    Need valid Username
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input name="email" id="email" type="Email" class="form-control border-2" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input name="password" id="password" type="password" class="form-control border-2" required>
                <!-- <div class="valid-feedback">
                    Username looks good!
                </div>
                <div class="invalid-feedback">
                    Need valid Username
                </div> -->
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>